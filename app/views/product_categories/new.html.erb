<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

 <% if @product_category.errors.any? %>
    <ul>
        <% @product_category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>  
        <% end %>
    </ul>
<% end %>


  <h1>Nova categoria de produto</h1>

  <%= form_with(model: @product_category) do |f| %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div>
      <%= f.submit "Salvar" %>
    </div>

  <% end %>

</div>