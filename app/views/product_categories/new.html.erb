<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

 <% if @product_category.errors.any? %>
    <ul>
        <% @product_category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>  
        <% end %>
    </ul>
<% end %>


  <h1>Nova categoria de produto</h1>

  <%= form_with(model: @product_category) do |f| %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div>
      <%= f.submit "Salvar" %>
    </div>

  <% end %>

  <% if !@product_categories.empty? %>

    <h3>Categorias de produto cadastradas:</h3>
    <ul>
      <% @product_categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    </ul>

  <% else %>

    <h3>Ainda não há nenhuma categoria cadastrada</h3>

  <% end %>
</div>