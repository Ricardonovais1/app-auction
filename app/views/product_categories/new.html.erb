<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%; background: #e9ecef">

 <%= render 'shared/form_errors', { obj: @product_category} %>


  <h3 class="mb-5 ms-4 text-success">Nova categoria de produto</h3>

  <%= form_with model: @product_category, data: { turbo: false } do |f| %>
    <div class="input-group input-group-lg mt-4">
      <%= f.label :name, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %><br />
      <%= f.text_field :name, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg", autofocus: true %>
    </div>
    <div class="d-grid">
      <%= f.submit "Salvar", class: "btn btn-success mb-3 mt-5 btn-lg" %>
    </div>

  <% end %>

  <% if !@product_categories.empty? %>

    <h3>Categorias de produto cadastradas:</h3>
    <ul>
      <% @product_categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    </ul>

  <% else %>

    <h3>Ainda não há nenhuma categoria cadastrada</h3>

  <% end %>
</div>
