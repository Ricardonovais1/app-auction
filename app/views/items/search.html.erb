<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%; background: #e9ecef">

<h2 class="mb-5 ms-2 text-success">Resultado da pesquisa para o termo '<%= @query %>':</h2>

<h3 class="mb-5 ms-2 text-success"><%= @items_code.count %> <%= Item.model_name.human(count: @items_code.count) %> <%= I18n.t(:found, count: @items_code.count) %>:</h3>

<hr>
<% @items_code.each do |item| %>
  <br />
    <%= render item %>
  <br />
    <hr>
  <br />
<% end %>

</div>