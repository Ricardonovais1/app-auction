<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%; background: #e9ecef">

  <h3 class="mb-5 ms-4 text-success">Produtos cadastrados</h3>

  <% if @items.any? %>


  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
    <% @items.each do |item| %>
      <div class="col mb-3">
        <div class="card">
          <div class="card border border-success border-opacity-50 rounded-3" id="item_<%= item.id %>">
            <div class="card-body">
              <% if item.image.attached? %>
                <%= image_tag(item.image, class:"img-fluid rounded-start", style:"height: 200px; object-fit: cover;") %>
              <% end %>
              <h5 class="card-title text-success"><strong><%= item.name %></strong></h5>
              <p class="card-text"><%= truncate(item.description, length: 30) %></p>
              <%= link_to 'Ver detalhes', item_path(item), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% else %>
    <p class="alert alert-warning mt-4" role="alert">Não há produtos cadastrados</p>
  <% end %>

</div>