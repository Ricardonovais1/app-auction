<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

  
 
    <% if @item.errors.any? %>
      <div class="alert alert-danger">
      <h4>Verifique os erros abaixo:</h4>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <h1>Cadastre um produto:</h1>

  <%= render 'form' %>

</div>