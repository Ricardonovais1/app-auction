<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

<% if @item.errors.any? %>
  <p>Verifique os erros abaixo:</p>
        <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>  
            <% end %>
        </ul>
<% end %>

  <h1>Cadastre um produto:</h1>

  <%= form_with(model: @item) do |f| %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.label :weight %><br />
      <%= f.number_field :weight %>
    </div>

    <div>
      <%= f.label :height %><br />
      <%= f.number_field :height %>
    </div>

    <div>
      <%= f.label :depth %><br />
      <%= f.number_field :depth %>
    </div>

    <div>
      <%= f.label :width %><br />
      <%= f.number_field :width %>
    </div>

    <div>
      <%= f.label :product_category_id %><br />
      <%= f.collection_select :product_category_id, @product_categories, :id, :name %>
    </div>

    <div>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div>
      <%= f.submit 'Salvar' %><br />
    </div>
  <% end %>

</div>