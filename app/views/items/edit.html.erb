<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

<% if @item.errors.any? %>
  <div class="alert alert-danger">
    <p>Verifique os erros abaixo:</p>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>  
        <% end %>
      </ul>
  </div>
<% end %>


  <h1 class="mb-5 ms-4 text-success">Edite as informações do produto:</h1>

  <%= render 'form' %>

</div>