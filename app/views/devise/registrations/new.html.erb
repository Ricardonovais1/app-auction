<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%; background: #e9ecef">

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4>Verifique os erros abaixo:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="mb-5 text-success">Criar conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field input-group input-group-default mt-4">
      <%= f.label :email, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-default" %><br />
      <%= f.email_field :email, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default", autofocus: true %>
    </div>

    <div class="field input-group input-group-default mt-4">
      <%= f.label :name, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-default" %><br />
      <%= f.text_field :name, class: "form-control", placeholder: 'Somente números', aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default" %>
    </div>

    <div class="field input-group input-group-default mt-4">
      <%= f.label :about, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-default" %><br />
      <%= f.text_field :about, class: "form-control", placeholder: 'Sobre mim', aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default" %>
    </div>

    <div class="field input-group input-group-default mt-4">
      <%= f.label :registration_number, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-default" %>
      <%= f.text_field :registration_number, class: "form-control", placeholder: 'Somente números', aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default" %>
    </div>

    <div class="field input-group input-group-default mt-4">
      <%= f.label :password, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-default"  %>
        <% if @minimum_password_length %>
          <% min = @minimum_password_length %>
        <% end %><br />
      <%= f.password_field :password, class: "form-control", placeholder: "Pelo menos #{min} caracteres", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default"  %>
    </div>

    <div class="field input-group input-group-default mt-4">
      <%= f.label :password_confirmation, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-default" %><br />
      <%= f.password_field :password_confirmation, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default"  %>
    </div>

    <div class="input-group input-group-default mt-4">
      <%= f.label :image, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-default"  %>
      <%= f.file_field :image, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default" %>
    </div>

    <div class="actions d-grid">
      <%= f.submit "Cadastrar", class: "btn btn-success mb-3 mt-5 btn-default" , data: {turbo: false} %>
    </div>
  <% end %>

</div>
