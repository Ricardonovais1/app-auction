<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4>Verifique os erros abaixo:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Criar conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%# <%= render "devise/shared/error_messages", resource: resource %>

     <div class="field input-group input-group-lg mt-4">
      <%= f.label :email, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %><br />
      <%= f.email_field :email, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg", autofocus: true %>
    </div>
    
    <div class="field input-group input-group-lg mt-4">
      <%= f.label :name, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %><br />
      <%= f.text_field :name, class: "form-control", placeholder: 'Somente números', aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg" %>
    </div>

    <div class="field input-group input-group-lg mt-4">
      <%= f.label :registration_number, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %>
      <%= f.text_field :registration_number, class: "form-control", placeholder: 'Somente números', aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg" %>
    </div>

    <div class="field input-group input-group-lg mt-4">
      <%= f.label :password, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg"  %>
        <% if @minimum_password_length %>
          <% min = @minimum_password_length %> 
        <% end %><br />
      <%= f.password_field :password, class: "form-control", placeholder: "Pelo menos #{min} caracteres", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg"  %>
    </div>

    <div class="field input-group input-group-lg mt-4">
      <%= f.label :password_confirmation, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %><br />
      <%= f.password_field :password_confirmation, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg"  %>
    </div>

    <div class="input-group input-group-lg mt-4">
      <%= f.label :image, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg"  %>
      <%= f.file_field :image, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg" %>
    </div>

    <div class="actions d-grid">
      <%= f.submit "Cadastrar", class: "btn btn-success mb-3 mt-5 btn-lg" , data: {turbo: false} %>
    </div>
  <% end %>

</div>
