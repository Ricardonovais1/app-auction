<%= stylesheet_link_tag 'custom' %>

<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%; background: #e9ecef">

  <h3 class="mb-5 text-success">Entre com sua conta</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field input-group input-group-default mt-4" >
      <%= f.label :email, class: "input-group-text fw-bold w-25 label-text" %><br />
      <%= f.email_field :email, class: "form-control", aria_describedby: "inputGroup-sizing-default", autofocus: true %>
    </div>

    <div class="field input-group input-group-default mt-4" >
      <%= f.label :password, class: "input-group-text fw-bold w-25 label-text" %><br />
      <%= f.password_field :password, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-default", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check form-switch mt-3">
        <%= f.check_box :remember_me, class: "form-check-input", role: "switch", id: "remember_me" %>
        <%= f.label :remember_me, "Lembre de mim", class: "form-check-label", for: "remember_me" %>
      </div>
    <% end %>

    <div class="actions d-grid">
      <%= f.submit "Entrar", class: "btn btn-success mb-3 mt-5 btn-default" , data: {turbo: false} %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
