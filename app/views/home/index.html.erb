<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

<h2 class="mb-5">Lotes em andamento</h2>

<h3><%= 'Nenhum lote cadastrado' if @lots.empty? %></h3>
 
<div class="row">

  <% if @lots.any? %>

    <% @lots.each do |lot| %>

      <div class="card col-3 ms-3 me-3 mb-3 p-0" style="width: 18rem;">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-success"><strong>Lote <%= lot.code %></strong></h5>
            <p class="card-text"><%= lot.start_date %> a  <%= lot.limit_date %></p></p>
            <a href="#" class="btn btn-secondary">Fazer um lance</a>
          </div>
        </div>
      </div>
     
    <% end %>

  <% end %>

</div>
</div>

<%# col-sm-6 mb-3 mb-sm-0 %>