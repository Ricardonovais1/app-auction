<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%;">

<h2 class="mb-5 ms-4 text-success">Lotes em andamento</h2>

<h3><%= 'Nenhum lote cadastrado' if @current_lots.empty? %></h3>
 
<div class="row current">

  <% if @current_lots.any? %> 

    <% @current_lots.each do |lot| %>

      <% if lot.current? %>

        <div class="card col-3 ms-4 me-4 mb-3 p-0 border-0" style="width: 20rem;">
          
          <div class="card border border-success border-opacity-75 rounded-3">
            <div class="card-header bg-success bg-opacity-75 text-white">              
              Lance mínimo agora: R$<%= lot.bid_value_to_beat %>,00
            </div>
            <div class="card-body bg-success bg-opacity-25 text-success">
              <h5 class="card-title">Lote aberto até:</h5>
              <p class="card-text"><%= I18n.l(lot.limit_date) %></p>
              <%= link_to "#{lot.code.upcase}", lot_path(lot), class: "btn btn-success mb-3 mt-2"  %>
            </div>
          </div>
          <%#  %>
        </div>
      
      <% end %>
      
    <% end %>

  <% end %>

</div>
</div><br /><br />

<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3  p-2 mb-2 border-success border-opacity-75 rounded-4" style="width: 75%;">

<h2 class="mb-5 ms-4 text-success">Lotes futuros</h2>

<h3><%= 'Nenhum lote cadastrado' if @future_lots.empty? %></h3>
 
<div class="row future">

  <% if @future_lots.any? %> 

    <% @future_lots.each do |lot| %>

      <% if lot.future? %>

        <div class="card col-3 ms-4 me-4 mb-3 p-0" style="width: 20rem;">
          <div class="card border border-success border-opacity-50 rounded-3">
            <div class="card-body bg-success bg-opacity-25">
              <h5 class="card-title">Previsão de abertura:</h5>
              <p class="card-text"><%= I18n.l(lot.start_date) %></p>
              <%= link_to "#{lot.code.upcase}", lot_path(lot), class: "btn btn-secondary mb-3 mt-2"  %>
              <p class="card-text"><%= I18n.l(lot.start_date) %> a <%= I18n.l(lot.limit_date) %></p>
            </div>
          </div>
        </div>
     
      <% end %>

    <% end %>

  <% end %>

</div>
</div>