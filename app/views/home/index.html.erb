              <%= link_to "#{Lot.model_name.human} #{lot.code}", lot_path(lot), class: "btn btn-success mb-3 mt-2"  %>
              <p class="card-text"><%= I18n.l(lot.start_date) %> a <%= I18n.l(lot.limit_date) %></p>
            </div>
          </div>
        </div>
     
      <% end %>

    <% end %>

  <% end %>

</div>
</div>