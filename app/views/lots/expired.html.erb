<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%; background: #e9ecef">

<h3 class="mb-5 ms-4 text-success">Lotes expirados</h3>

<h3><%= 'Nenhum lote expirado' if @expired_lots.empty? %></h3>
<div class="row">

  <% if @expired_lots.any? %>

    <% @expired_lots.each do |lot| %>

      <div class="col mb-3" style="width: 20rem;">
        <div class="card">
          <div class="card border border-secondary border-opacity-50 rounded-3">
            <div class="card-body">
              <h6 class="card-title">Lote encerrado em:</h6>
              <p class="card-text"><%= I18n.l(lot.limit_date) %></p>
              <%= link_to "#{lot.code}", lot_path(lot), class: "btn btn-danger mb-3 mt-2"  %>
            </div>
          </div>
        </div>
      </div>

    <% end %>

  <% end %>
</div>
