<div class="mx-auto p-4 mt-4" style="width: 75%; background: #e9ecef">

<h2 class="mb-5 ms-4">Lotes expirados</h2>

<h3><%= 'Nenhum lote expirado' if @expired_lots.empty? %></h3>
<div class="row">

  <% if @expired_lots.any? %> 

    <% @expired_lots.each do |lot| %>

      <div class="card col-3 ms-4 me-4 mb-3 p-0" style="width: 20rem;">
        <div class="card border rounded-3">
          <div class="card-body">
            <h5 class="card-title">Lote encerrado em:</h5>
            <p class="card-text"><%= I18n.l(lot.limit_date) %></p>
            <%= link_to "#{lot.code}", lot_path(lot), class: "btn btn-danger mb-3 mt-2"  %>
            <p class="card-text"><%= I18n.l(lot.start_date) %> a <%= I18n.l(lot.limit_date) %></p></p>
          </div>
        </div>
      </div>
     
    <% end %>

  <% end %>
</div>
