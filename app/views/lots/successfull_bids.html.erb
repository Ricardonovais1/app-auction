<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%;">

<h2 class="mb-5 ms-2 text-success">Lances vencedores:</h2>



<% if @expired_lots.any?  %>

<%# ====================== INÃCIO DA TABELA ============================= %>

      <table class="table table-success table-striped">
        <thead>
          <tr>
            <th scope="col">Arrematante</th>
            <th scope="col">Email</th>
            <th scope="col">Valor</th>
            <th scope="col">Lote</th>
            <th scope="col">Expirado em</th>
          </tr>
        </thead>
        <tbody>

  <% @expired_lots.each do |lot| %>

    <% if lot.bids.any? %>
     
        
          <tr>
            <th scope="row"><%= lot.successful_bidder_name %></th>
            <td><%= lot.successful_bidder_email %></td>
            <td><%= lot.successful_bidder_value %></td>
            <td><%= lot.successful_bidder_lot %></td>
            <td><%= lot.successful_bidder_lot_expired_date %></td>
          </tr>
        

    <% end %>

  <% end %>
  <%# ====================== FIM DA TABELA: ============================= %>
         </tbody>
      </table>
  <% else %>

    <h3><%= 'Nenhum lance vencedor' %></h3>

<% end %>

</div>