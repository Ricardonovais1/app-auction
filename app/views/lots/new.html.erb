<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">


  <h2>Criar um novo lote</h2>

    <%= form_with(model: @lot) do |f|  %>

      <div>
        <%= f.label :code %><br />
        <%= f.text_field :code, autofocus: true %>
      </div>

      <div>
        <%= f.label :start_date %><br />
        <%= f.date_field :start_date %>
      </div>

      <div>
        <%= f.label :limit_date %><br />
        <%= f.date_field :limit_date %>
      </div>

      <div>
        <%= f.label :minimum_bid_value %><br />
        <em>R$ </em>
        <%= f.number_field :minimum_bid_value %>
        <em>,00</em>
      </div>

      <div>
        <%= f.label :minimum_bid_difference %><br />
        <em>R$ </em>
        <%= f.number_field :minimum_bid_difference %>
        <em>,00</em>
      </div>

      <div>
        <%= f.submit 'Cadastrar lote' %>
      </div>

    <% end %>

</div>