<div class="mx-auto p-4 bg-success bg-opacity-10 border border-3 border-success p-2 mb-2 border-opacity-50 rounded-4 mt-4" style="width: 75%; background: #e9ecef">

<%= render 'shared/form_errors', { obj: @blocked_cpf } %>

<h3 class="mb-5 ms-2 text-success">Insira um cpf a ser bloqueado</h3>

<%= form_with model: @blocked_cpf, data: { turbo: false } do |f| %>
  <div class="input-group input-group-lg mt-4">
    <%= f.label :cpf, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg"  %>
    <%= f.text_field :cpf, placeholder: "Somente nÃºmeros", class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg", autofocus: true %>
  </div>
  <div class="d-grid">
    <%= f.submit 'Gravar', class: "btn btn-success mb-3 mt-5 btn-lg" %>
  </div>
<% end %>

<% if @blocked_cpfs&.any? %>

    <h3>CPF's bloqueados:</h3>
    <ul>
      <% @blocked_cpfs.each do |cpf| %>
        <li><%= cpf.cpf %></li>
      <% end %>
    </ul>

<% end %>
</div>