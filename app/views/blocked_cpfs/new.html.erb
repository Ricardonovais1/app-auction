<div class="mx-auto p-4" style="width: 75%; background: #e9ecef">

<h2>Insira um cpf a ser bloqueado</h2>

<%= form_with(model: @blocked_cpf) do |f| %>
  <div class="input-group input-group-lg mt-4">
    <%= f.label :cpf, class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg"  %>
    <%= f.text_field :cpf, placeholder: "Somente números", class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg", autofocus: true %>
  </div>
  <div class="d-grid">
    <%= f.submit 'Gravar', class: "btn btn-success mb-3 mt-5 btn-lg" %>
  </div>
<% end %>

<% if !@blocked_cpfs.empty? %>

    <h3>CPF's bloqueados:</h3>
    <ul>
      <% @blocked_cpfs.each do |cpf| %>
        <li><%= cpf.cpf %></li>
      <% end %>
    </ul>

  <% else %>

    <h3>Ainda não há nenhum CPF bloqueado</h3>

  <% end %>
</div>